<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= check_box_tag "task_#{task.id}", 1, task.completed %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "Delete", task_path(task), data: {turbo_method: 'delete', turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>
  <%= link_to "New task", new_task_path %>
